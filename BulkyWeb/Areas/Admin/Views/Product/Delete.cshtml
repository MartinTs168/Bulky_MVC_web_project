@model Product // if we don't pass anything in the controller a new obj will be created

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-0">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
	<div class="border p-3">
				@*<div asp-validation-summary="ModelOnly"></div>*@
		<div class="form-floating py-2 col-12">
			<input asp-for="Title" disabled class="form-control border-0 shadow"/>
			<label asp-for="Title" class="ms2"></label>
		</div>
		<div class="form-floating py-2 col-12">
			<input asp-for="ISBN" disabled class="form-control border-0 shadow"/>
			<label asp-for="ISBN" class="ms2"></label>
		</div>
		<div class="form-floating py-2 col-12">
			<input asp-for="Author" disabled class="form-control border-0 shadow"/>
			<label asp-for="Author" class="ms2"></label>
		</div>
		<div class="form-floating py-2 col-12">
			<textarea asp-for="Description" disabled class="form-control border-0 shadow"></textarea>
			<label asp-for="Description" class="ms2"></label>
		</div>
		<div class="form-floating py-2 col-12">
			<input asp-for="ListPrice" disabled class="form-control border-0 shadow"/>
			<label asp-for="ListPrice" class="ms2"></label>
		</div>
		<div class="form-floating py-2 col-12">
			<input asp-for="Price" disabled class="form-control border-0 shadow"/>
			<label asp-for="Price" class="ms2"></label>
		</div>
		<div class="form-floating py-2 col-12">
			<input asp-for="Price50" disabled class="form-control border-0 shadow"/>
			<label asp-for="Price50" class="ms2"></label>
		</div>
		<div class="form-floating py-2 col-12">
			<input asp-for="Price100" disabled class="form-control border-0 shadow"/>
			<label asp-for="Price100" class="ms2"></label>
		</div>

		<div class="row mt-3">
			<div class="col-6 col-md-3">  <!-- the button wil be 6 cols wide on small devices and 3 cols wide on medium and above devices-->
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
					Back to List
				</a>
			</div>
		</div>

	</div>
</form>
	</div>
</div>

